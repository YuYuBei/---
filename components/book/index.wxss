.container {
  margin-top: 30rpx;
  display: flex;
  position: relative;
  box-shadow: 2px 2px 3px #e3e3e3;
  flex-direction: column;
  width: 240rpx;
  height: 360rpx;
}

.container image {
  width: 100%;
  height: 100%;
  border-radius: 2px;
}

.description {
  width: 216rpx; /* 240-10-15 = 216 */
  position: absolute; /* 把图书信息覆盖在上面 */
  bottom: 0;/* 实现图书信息的底部紧贴 */
  background-color: #fff;
  padding: 5rpx 10rpx 8rpx 15rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  border-bottom-right-radius: 2px;
  border-bottom-left-radius: 2px;
}

.title {
  margin-top: 10rpx;
  text-overflow: ellipsis; /* 文本溢出时使用省略号来代替溢出的字符 */
  white-space: nowrap; /* 段落的文本不进行换行 */
  overflow: hidden; /* 内容溢出元素框时隐藏 */
}

.author {
  font-size: 20rpx;
  color: #999;
  margin-bottom: 10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.foot {
  font-size: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.footer {
  color: #666;
}